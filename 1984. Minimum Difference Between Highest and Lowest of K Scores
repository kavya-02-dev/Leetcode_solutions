class Solution {
    public int minimumDifference(int[] nums, int k) {
        if(nums.length<=1) return 0;
        int min=Integer.MAX_VALUE;
        Arrays.sort(nums);
        
        for(int i=0;i<=nums.length-k;i++){
            int dif=nums[i+k-1]-nums[i];
            if (dif<min) min=dif;
            
        }
        return min;
    }
}
