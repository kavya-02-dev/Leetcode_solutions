class Solution {
    public int[] plusOne(int[] digits) {

        StringBuilder sb = new StringBuilder();
        for (int d : digits) {
            sb.append(d);
        }

        int carry = 1;
        for (int i = sb.length() - 1; i >= 0 && carry == 1; i--) {
            int digit = sb.charAt(i) - '0' + carry;
            carry = digit / 10;
            sb.setCharAt(i, (char) ('0' + digit % 10));
        }

        if (carry == 1) {
            sb.insert(0, '1');
        }

        return sb.chars().map(c -> c - '0').toArray();
    }
}
