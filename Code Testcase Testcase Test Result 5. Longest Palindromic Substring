class Solution
{
    public String longestPalindrome(String s)
    {

        int count;
        String res = "";
        int max = 0;

        for (int i = 0; i < s.length(); i++)
        {
            count = 1;
            for (int j = 1; j < i; j++)
            {
                if (i - j < 0 || i + j > s.length() - 1) break;
                if (s.charAt(i - j) == s.charAt(i + j))
                {
                    count += 2;
                    if (count > max)
                    {
                        max = count;
                        res = s.substring(i - j, i + j + 1);
                    }
                }
                else
                {
                    break;
                }
            }
            count = 0;
            for (int j = 0; j < i; j++)
            {

                if (i - j < 0 || i + j + 1 > s.length() - 1) break;
                if (s.charAt(i - j) == s.charAt(i + j + 1))
                {
                    count += 2;
                    if (count > max)
                    {
                        max = count;
                        res = s.substring(i - j, i + j + 2);

                    }
                }
                else
                {
                    break;
                }


            }
        }
        return res;
    }
}
