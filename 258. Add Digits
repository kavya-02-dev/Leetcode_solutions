class Solution {
    public int addDigits(int num) {
        int x=num;
        
        String a=String.valueOf(num);
        int sum=0;
        if(a.length()==1) return (int)a.charAt(0)-'0';
        while(a.length()>1){
            
            sum=0;
            for(int i=0;i<a.length();i++){
                
                int y=a.charAt(i)-'0';
                sum+=y;

            }
            a=String.valueOf(sum);
        }
        return sum;
    }
}
